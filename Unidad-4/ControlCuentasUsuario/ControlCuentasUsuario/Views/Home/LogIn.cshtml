@model ControlCuentasUsuario.Models.Cuentum
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "Layout";
}
    <main>
        <form action="~/Home/Login" method="post" class="form-box">
            <input type="email" placeholder="Email Address" required />
            <input type="password" placeholder="Password" required />
            <input type="checkbox" name="hold" value="true" />
            <input type="submit" value="Sign In" />
        </form>
        @Html.ValidationSummary()
        <a href="~/Home/RecoverPass">Forgot your Password?</a>
        <a href="~/Home/Register">Register an account</a>
    </main>
