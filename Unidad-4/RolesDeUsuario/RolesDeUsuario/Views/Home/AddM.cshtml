@model  RolesDeUsuario.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "Layout";
}
    <form action="~/Home/AddM" method="post" class="form-boxAM">
        <h1>Agregar maestro</h1>
        <label>Numero de control:</label>
        <input type="text" asp-for="Ncontrol" required />
        <label>Nombre:</label>
        <input type="text" asp-for="Nombre" required />
        <label>Contraseña:</label>
        <input type="password" asp-for="Contrasena" required/>
        @Html.ValidationSummary()
        <input type="submit" value="Agregar" />
        <a href="~/Home/ViewM">Regresar</a>
    </form>