@model IEnumerable<Actividad_5.Models.Clase> 
@{
   Layout= "Layout";
}

    <div class="slides">
        @{
            Random r = new Random();
            var img = r.Next(0, 6);
            if (img == 2)
            {
                <img src="~/images/carousel2.jpg">

            }
            if (img == 3)
            {
                <img src="~/images/carousel3.jpg">
            }
            if (img == 4)
            {
                <img src="~/images/carousel4.jpg">
            }
            else
            {
                <img src="~/images/carousel1.jpg">
            }
        }

    </div>

<h1>Clasificación de los vertebrados</h1>

<div class="clases">
        @foreach (var cl in Model)
        {
            <div>
                <a href="~/@cl.Nombre">
                    <img src="~/clases/@(cl.Id).jpg">
                    <h1>@cl.Nombre</h1>
                    <p>@cl.Descripcion</p>
                    
                </a>
            </div>
         }
</div>

