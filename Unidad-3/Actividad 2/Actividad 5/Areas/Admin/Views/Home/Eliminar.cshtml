@model Actividad_5.Models.Especies
@{
    Layout = "Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Eliminar Especies</h1>

<form method="post" action="~/Admin/Home/Eliminar">

    <label>Nombre:</label>
    <input type="text" readonly="readonly" asp-for="Especie"/>
    <label>Clase:</label>
    <input type="text" readonly="readonly" asp-for="IdClaseNavigation.Nombre"/>
    <input type="hidden" asp-for="Id"/>


    <input type="submit" value="Eliminar" onclick="return confirm('¿Está seguro de eliminar el elemento seleccionado?')"/>
    <a href="~/Admin">
        <input type="button" value="Cancelar"  />
    </a>
</form>

